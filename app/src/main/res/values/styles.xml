<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="font_bold_32">
        <item name="android:textSize">@dimen/font_size_32</item>
        <item name="android:fontFamily">@font/ys_display_bold</item>
        <item name="fontWeight">700</item>
    </style>

    <style name="font_medium_22">
        <item name="android:textSize">@dimen/font_size_22</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="fontWeight">500</item>
    </style>

    <style name="font_medium_16">
        <item name="android:textSize">@dimen/font_size_16</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="fontWeight">500</item>
    </style>

    <style name="font_regular_16">
        <item name="android:textSize">@dimen/font_size_16</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="fontWeight">400</item>
    </style>

    <style name="font_regular_12">
        <item name="android:textSize">@dimen/font_size_12</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="fontWeight">400</item>
    </style>

    <style name="rounded_square_12">
        <item name="cornerSize">12%</item>
    </style>

    <style name="image_buttons">
        <item name="android:layout_width">@dimen/vac_detail_image_dimens</item>
        <item name="android:layout_height">@dimen/vac_detail_image_dimens</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_marginHorizontal">4dp</item>
        <item name="android:layout_marginVertical">8dp</item>
        <item name="tint">?attr/colorOnPrimary</item>
    </style>

    <style name="team_member_view" parent="font_medium_16">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="layout_constraintHorizontal_bias">0</item>
    </style>

    <style name="details_header_2" parent="font_medium_22">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="layout_constrainedWidth">true</item>
        <item name="layout_constraintHorizontal_bias">0</item>
    </style>

    <style name="details_header_3" parent="font_medium_16">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="layout_constrainedWidth">true</item>
        <item name="layout_constraintHorizontal_bias">0</item>
    </style>

    <style name="details_text_in_paragraph" parent="font_regular_16">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="layout_constrainedWidth">true</item>
        <item name="layout_constraintHorizontal_bias">0</item>
    </style>

</resources>